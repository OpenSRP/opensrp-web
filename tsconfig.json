{
    "compilerOptions": {
        "target": "esnext",
        "sourceMap": false,
        "lib": ["dom", "dom.iterable", "esnext", "es6"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "noEmitOnError": true,
        "jsx": "preserve",
        "baseUrl": "packages",
        "declaration": true,
        "declarationMap": false,
        "listEmittedFiles": true
    },
    "include": ["packages", "clients", "stories", "**/*.ts", "**/*.tsx"],
    "exclude": ["**/node_modules", "**/coverage", "**/tests", "**/dist", "**/*.spec.ts"]
}
